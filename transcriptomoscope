#!/bin/bash

DIR="${BASH_SOURCE%/*}/"

# echo $DIR
# echo $@

$DIR/transcriptomoscope.R -o vtess-rel-colwise.pdf $@ &
$DIR/transcriptomoscope.R -O -o vtess-rel-samplewise.pdf $@ &
$DIR/transcriptomoscope.R --abs -o vtess-abs-colwise.pdf $@ &
$DIR/transcriptomoscope.R -O --abs -o vtess-abs-samplewise.pdf $@ &

$DIR/run-umap.py -f 100 -n 25 $@
$DIR/transcriptomoscope.R --one -o vtess-umap.pdf umap_joint_* &
$DIR/transcriptomoscope.R --abs -o vtess-umap-colwise.pdf umap_joint_* &
$DIR/transcriptomoscope.R -O --abs -o vtess-umap-samplewise.pdf umap_joint_* &
